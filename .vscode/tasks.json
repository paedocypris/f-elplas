{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "${workspaceRoot}\\lnccGeomech\\build.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false
            },
            "problemMatcher": {
                "owner": "fortran",
                "fileLocation": ["relative", "${workspaceFolder}\\lnccGeomech\\bin"],
                "pattern": [
                    {
                        "regexp" : "^(.*)\\((\\d*)\\):\\s(error|warning|remark)\\s#(\\d+):\\s(.*)$",
                        "file": 1,
                        "line": 2,
                        "severity": 3,
                        "code": 4,
                        "message": 5
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^-*(\\^$)",
                        "endColumn": 1
                    }
                ]
            }
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "${workspaceRoot}\\lnccGeomech\\debug.bat",
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}