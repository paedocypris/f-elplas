{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "${workspaceRoot}\\lnccGeomech\\buildPETRO.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true
            },
            "problemMatcher": {
                "owner": "fortran",
                "fileLocation": ["relative", "${workspaceFolder}\\lnccGeomech\\bin"],
                "pattern": [
                    {
                        "regexp": "^([^\\s].*):(\\d+):(\\d+):$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                    },
                    {
                        "regexp": "^.*$",
                    },
                    {
                        "regexp": "^\\s+(.*)$",
                        "code": 1
                    },
                    {
                        "regexp": "^.*$",
                    },
                    {
                        "regexp": "^(.*):\\s+(.*)$",
                        "severity": 1,
                        "message": 2
                    }
                ],
                "source": "gfortran"
            }
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "${workspaceRoot}\\lnccGeomech\\debugPETRO.bat",
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}