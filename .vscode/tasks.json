{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "c:\\windows\\sysnative\\bash.exe",
                "args": ["-c"]
            }
        }
    },
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}\\lnccGeomech"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "revealProblems": "onProblem"
            },
            "problemMatcher": {
                "owner": "fortran",
                "fileLocation": ["relative", "${workspaceFolder}\\lnccGeomech\\bin"],
                "pattern": [
                    {
                        "regexp": "^([^\\s].*):(\\d+):(\\d+):$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                    },
                    {
                        "regexp": "^.*$",
                    },
                    {
                        "regexp": "^\\s+(.*)$",
                        "code": 1
                    },
                    {
                        "regexp": "^.*$",
                    },
                    {
                        "regexp": "^(.*):\\s+(.*)$",
                        "severity": 1,
                        "message": 2
                    }
                ],
                "source": "gfortran"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}\\lnccGeomech"
            }
        }
    ]
}